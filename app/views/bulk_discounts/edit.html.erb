<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :percent %>
  <%= f.text_field :percent, value: @discount.percent %> %>
  <%= f.label :threshhold %>
  <%= f.text_field :threshhold, value: @discount.threshhold %> %>
  <%= f.submit "Update Discount" %>
<% end %>
