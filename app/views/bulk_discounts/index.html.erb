<h1>Discounts</h1>
<ul>
<% @merchant.bulk_discounts.each do |discount| %>
  <section id='discount-<%= discount.id %>'>
    <li>Percentage discount: <%=link_to "#{discount.percent}", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}" %>
    quantity needed: <%= discount.threshhold %></li>
  </section>
<% end %>
</ul>
